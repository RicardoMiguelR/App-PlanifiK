doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario 
            h1 Crea tu cuenta en Planifi-K

            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error   

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo
                    h4(for="email") Email: 
                    input.correo-crear(type="text" name="email" placeholder="Tu correo" value= email)
                .campo
                    h4(for="password") Password: 
                    input(type="password" name="password" placeholder="Tu password" value= password)
                .campo.enviar
                    input.boton-crear(type="submit" value="Crear cuenta")
                .campo.iniciar 
                    a(href="/iniciar-sesion") Iniciar sesion 
        