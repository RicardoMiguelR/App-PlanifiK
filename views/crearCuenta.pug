doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario 
            h1 Crea tu cuenta en RMUptask

            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error   

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo
                    label(for="email") Email: 
                    input(type="text" name="email" placeholder="Tu email")
                .campo
                    label(for="password") Password: 
                    input(type="password" name="password" placeholder="Tu password")
                .campo.enviar
                    input(type="submit" value="Crear cuenta")
                .campo 
                    a(href="/iniciar-sesion") Volver a iniciar sesion 

        script(src="/dist/bundle.js")
        