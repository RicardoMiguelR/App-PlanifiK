doctype html
html(lang="en")
    head
        include partials/header
    body 
        header.barra
            include partials/headerNavbar

        main.contenedor 
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/nuevo-proyecto" class="boton")
                        button.quitar 
                            span Nuevo proyecto +
                .panel.lista-proyectos 
                    h2 Proyectos 
                    ul#proyectos.proyectos
                        if (proyectos.length)
                            each proyecto in proyectos
                                li
                                    a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre


            block contenido

            //- pre= vardump(proyectos)

        script(src="/dist/bundle.js")