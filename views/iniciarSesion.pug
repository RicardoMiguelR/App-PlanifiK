doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario 
            h1 Inicia Sesion
            
            if locals.mensajes
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo
                    label(for="email") Email: 
                    input(type="text" name="email" placeholder="Tu email" value= email)
                .campo
                    label(for="password") Password: 
                    input(type="password" name="password" placeholder="Tu password" value= password)
                .campo.enviar
                    input.boton(type="submit" value="Iniciar sesion")
                .campo.acciones
                    span ¿Eres nuevo? 
                        a(href="/crear-cuenta") Crear tu cuenta
                .campo.reestablecer
                    a(href="/reestablecer") ¿Olvidaste tu contraseña? 
        